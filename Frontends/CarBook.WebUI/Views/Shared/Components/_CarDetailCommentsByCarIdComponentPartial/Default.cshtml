@model (List<ResultReviewByCarIdDto>,List<StarDto>)


<div class="tab-pane fade" id="pills-review" role="tabpanel" aria-labelledby="pills-review-tab">
    <div class="row">
        <div class="col-md-7">
            <h3 class="head">@Model.Item1.Count Değerlendirme</h3>

            @foreach (var item in Model.Item1)
            {

                <div class="review d-flex">
                    <div class="user-img" style="background-image: url(images/person_1.jpg)"></div>
                    <div class="desc">
                        <h4>
                            <span class="text-left">@item.CustomerName</span>
                            <span class="text-right">@item.ReviewDate.ToString("dd MMM yyyy")</span>
                        </h4>
                        <p class="star">
                            <span>
                                @for (int  i = 0;  i <item.RaytingValue;  i++)
                                {
                                <i class="ion-ios-star"></i>
                                    
                                }

                            </span>
                            <span class="text-right"><a href="#" class="reply"><i class="icon-reply"></i></a></span>
                        </p>
                        <p>@item.Comment</p>
                    </div>
                </div>

            }





        </div>

        <div class="col-md-5">
            <div class="rating-wrap">
                <h3 class="head">Değerlendirme Sonuçları</h3>
                <div class="wrap">
                    
                   @foreach (var item in Model.Item2)
                    {

                        <p class="star">
                            <span>
                                @for (int i = 1; i <= item.StarCount; i++)
                                {
                                    <i class="ion-ios-star"></i>

                                }
                                (@item.Percent%)
                            </span>
                            <span>@item.StarCommentCount Yorum</span>
                        </p>
                    }


                </div>
            </div>
        </div>
    </div>
</div>
