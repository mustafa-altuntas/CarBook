@model List<ResultFeatureDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}


<div class="col-xl-12">
    <div class="card">
        <div class="card-body">


            <h4 class="card-title">Araba Özellikleri Listesi</h4>
            <p class="card-subtitle mb-4">
                Arabalar ile ilgili yeni özellik eklem, (Klima, Bluetoot, Audio, Elektirik vs.) özellikler listesi, özellikler üzerinde düzenleme ve bir özellik kaldırma işlemini buradan gerçekleştirebilirsiniz.
            </p>

            <div class="button-examples mb-3">
                <a href="/AdminFeature/CreateFeature" class="btn btn-outline-secondary waves-effect waves-light">Yeni Araç Özelliği Oluştur</a>

            </div>
            <div class="table-responsive">
                <table class="table mb-0">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Özellik</th>
                          
                            <th>Sil</th>
                            <th>Güncelle</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <th scope="row">@count</th>
                                <td>@item.Name</td>

                                <td><a href="/AdminFeature/RemoveFeature/@item.FeatureId" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/AdminFeature/UpdateFeature/@item.FeatureId" class="btn btn-outline-success">Güncelle</a></td>

                            </tr>
                        }


                    </tbody>
                </table>
            </div>

        </div>
        <!-- end card-body-->
    </div>
    <!-- end card -->

</div>
<!-- end col -->
