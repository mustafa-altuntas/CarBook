@model CreateReservationDto

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
    var locations = (List<SelectListItem>)ViewBag.LocationSelectList;
}



<div class="col-md-12 block-9 mb-md-5">


    <form method="post" class="bg-light p-5 contact-form">

        <h3 class="alert alert-success mb-3">Araç Rezervasyon Formu</h3>


        <div class="form-group">
            <input asp-for="CarId" value="@ViewBag.v3" hidden type="text" class="form-control" placeholder="Almal İstediğiniz Araba">
        </div>

        <div class="form-group">
            <label class="form-item">Adınız</label>
            <input asp-for="Name"  type="text" class="form-control" placeholder="Adınız">
        </div>

        <div class="form-group">
            <label class="form-item">Soyadınız</label>
            <input asp-for="Surname"  type="text" class="form-control" placeholder="Soyadınız">
        </div>

        <div class="form-group">
            <label class="form-item">Mail Adresiniz</label>
            <input asp-for="Email"  type="text" class="form-control" placeholder="Mail Adresiniz">
        </div>

        <div class="form-group">
            <label class="form-item">Telefon Numaranız</label>
            <input asp-for="Phone"  type="text" class="form-control" placeholder="Telefon Numaranız">
        </div>

        <div class="form-group">
            <label class="form-item">Almak İstediğiniz Lokasyon</label>
            <select asp-for="PickUpLocationId" asp-items="locations" class="form-control">
                <option disabled selected>Lütfen Bir Lokasyon Seçin</option>
            </select>
        </div>

        <div class="form-group">
            <label class="form-item">Teslim Etmek İstediğiniz Lokasyon</label>
            <select asp-for="DropOffLocationId" asp-items="locations" class="form-control">
                <option disabled selected>Lütfen Bir Lokasyon Seçin</option>
            </select>
        </div>

        <div class="form-group">
            <label class="form-item">Yaşınız</label>
            <input asp-for="Age"  type="text" class="form-control" placeholder="Yaşınız">
        </div>

        <div class="form-group">
            <label class="form-item">Ehliyet Yılınız</label>
            <input asp-for="DriverLicenseYear"  type="text" class="form-control" placeholder="Ehliyet Yılınız">
        </div>

        <div class="form-group">
            <label class="form-item">Varsa Eklemek İstedikleriniz</label>
            <textarea asp-for="Description" cols="30" rows="7" class="form-control" placeholder="Varsa Eklemek İstedikleriniz"></textarea>
        </div>

        <div class="form-group">
            <input  type="submit" value="Rezervasyon Tamamla" class="btn btn-primary py-3 px-5">
        </div>
    </form>

</div>
