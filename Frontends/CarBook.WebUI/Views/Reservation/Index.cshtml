@model ResultLocationDto

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
    var locations = (List<SelectListItem>)ViewBag.LocationSelectList;
}



<div class="col-md-12 block-9 mb-md-5">
    <form class="bg-light p-5 contact-form">

        <div class="form-group">
            <label class="form-item">Teslim Etmek İstediğiniz Lokasyon</label>
            <input type="text" class="form-control" readonly placeholder="Almal İstediğiniz Araba">
        </div>

        <div class="form-group">
            <label class="form-item">Adınız</label>
            <input type="text" class="form-control" placeholder="Adınız">
        </div>

        <div class="form-group">
            <label class="form-item">Soyadınız</label>
            <input type="text" class="form-control" placeholder="Soyadınız">
        </div>

        <div class="form-group">
            <label class="form-item">Mail Adresiniz</label>
            <input type="text" class="form-control" placeholder="Mail Adresiniz">
        </div>

        <div class="form-group">
            <label class="form-item">Telefon Numaranız</label>
            <input type="text" class="form-control" placeholder="Telefon Numaranız">
        </div>

        <div class="form-group">
            <label class="form-item">Almak İstediğiniz Lokasyon</label>
            <select asp-for="LocationId" asp-items="locations" class="form-control">
                <option>Lütfen Bir Lokasyon Seçin</option>
            </select>
        </div>

        <div class="form-group">
            <label class="form-item">Teslim Etmek İstediğiniz Lokasyon</label>
            <select asp-for="LocationId" asp-items="locations" class="form-control">
                <option>Lütfen Bir Lokasyon Seçin</option>
            </select>
        </div>

        <div class="form-group">
            <label class="form-item">Yaşınız</label>
            <input type="text" class="form-control" placeholder="Yaşınız">
        </div>

        <div class="form-group">
            <label class="form-item">Ehliyet Yılınız</label>
            <input type="text" class="form-control" placeholder="Ehliyet Yılınız">
        </div>

        <div class="form-group">
            <label class="form-item">Varsa Eklemek İstedikleriniz</label>
            <textarea name="" id="" cols="30" rows="7" class="form-control" placeholder="Varsa Eklemek İstedikleriniz"></textarea>
        </div>

        <div class="form-group">
            <input type="submit" value="Rezervasyon Tamamla" class="btn btn-primary py-3 px-5">
        </div>
    </form>

</div>
