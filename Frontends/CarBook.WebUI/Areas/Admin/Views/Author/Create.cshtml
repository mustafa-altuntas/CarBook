
@model CreateAuthorDto

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="col-xl-12">

    <div class="card">
        <div class="card-body">


            <h4 class="card-title">Yeni Author Bilgisi Girişi</h4>
            <p class="card-subtitle mb-4">Author alanına veri girişini aşağıdaki panelden yapınız... </p>

            <form method="post">

                <div class="form-row">

                    <div class="col-md-8 mb-3">


                        <div class="form-group">
                            <label asp-for="Name">Ad Soyad</label>
                            <input asp-for="Name" type="text" class="form-control" placeholder="Ad Soyad giriniz" required="">
                        </div>

                        <div class="form-group">
                            <label asp-for="Description">Açıklama</label>
                            <textarea asp-for="Description" rows="6" type="text" class="form-control" placeholder="Açıklama giriniz" required=""></textarea>
                        </div>

                        <div class="form-group">
                            <label asp-for="ImageUrl">Yazar Fotoğrafı </label>
                            <input asp-for="ImageUrl" type="text" class="form-control" placeholder="Yazar fotoğrafını giriniz" required="">
                        </div>


                    </div>

                </div>

                <button type="submit" class="btn btn-primary waves-effect waves-light">Kaydet</button>
            </form>

        </div>
    </div>
</div>

