@model CreateFooterAddressDto

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row">
<div class="col-xl-12">

    <div class="card">
        <div class="card-body">


            <h4 class="card-title">Yeni Adres Bilgisi Girişi</h4>
            <p class="card-subtitle mb-4">Adres alanına ait bilgileri asagıdaki panelden girebilirsiniz. Tema bütünlüğünün bozulmaması adına lütfen sadece bir tane veri girisi yapınız. Mevcutta veriniz varsa düzenleyiniz. Yeni veri girisi yaparsanız öncekini siliniz. </p>

            <form method="post">

                <div class="form-row">

                    <div class="col-md-8 mb-3">


                        <div class="form-group">
                            <label asp-for="Address">Adres</label>
                            <input asp-for="Address" type="text" class="form-control" placeholder="Adres giriniz" required="">
                        </div>

                        <div class="form-group">
                            <label asp-for="Phone">Telefon Numarası</label>
                            <input asp-for="Phone" type="text" class="form-control" placeholder="Telefon numarasını giriniz" required="">
                        </div>

                        <div class="form-group">
                            <label asp-for="Email">Email Adresi</label>
                            <input asp-for="Email" type="text" class="form-control" placeholder="Email adresini giriniz" required="">
                        </div>

                        <div class="form-group">
                            <label asp-for="Description">Açıklama</label>
                            <textarea asp-for="Description" rows="6" type="text" class="form-control" placeholder="Açıklama giriniz" required=""></textarea>
                        </div>



                    </div>

                </div>

                <button type="submit" class="btn btn-primary waves-effect waves-light">Kaydet</button>
            </form>

        </div>
    </div>
</div>
</div>

