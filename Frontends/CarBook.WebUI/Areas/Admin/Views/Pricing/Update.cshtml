@model UpdatePricingDto

@{
    ViewData["Title"] = "Upate";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="col-xl-12">

    <div class="card">
        <div class="card-body">


            <h4 class="card-title">Ödeme Periyodu Güncelle</h4>
            <p class="card-subtitle mb-4">Ödeme Periyodu alanına veri güncellemesini aşağıdaki panelden yapınız... </p>

            <form method="post">

                <div class="form-row">

                    <div class="col-md-8 mb-3">


                        <div class="form-group">
                            <label asp-for="Name">Kategori Adı</label>
                            <input asp-for="Name" type="text" class="form-control" placeholder="Ödeme periyodu Adını giriniz" required="">
                        </div>



                    </div>

                </div>

                <button type="submit" class="btn btn-primary waves-effect waves-light">Güncelle</button>
            </form>

        </div>
    </div>
</div>

