@model CreateTestimonialDto

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="col-xl-12">

    <div class="card">
        <div class="card-body">


            <h4 class="card-title">Yeni Referans Sayfası Veri Girişi</h4>
            <p class="card-subtitle mb-4">
                Referans ekleme işleminin yapıldığı sayfamızdır. Bilgileri eksiksiz olarak doldurup kaydet butonuna tıklamanız yeterlidir.
            </p>

            <form method="post">

                <div class="form-row">

                    <div class="col-md-8 mb-3">


                        <div class="form-group">
                            <label asp-for="Name">Referans Ad Soyad</label>
                            <input asp-for="Name" type="text" class="form-control" placeholder="Referans Adı ve Soyadını Giriniz" required="">
                        </div>

                        <div class="form-group">
                            <label asp-for="Title">Referans Unvanı</label>
                            <input asp-for="Title" type="text" class="form-control" placeholder="Referans Unvanını Giriniz" required="">
                        </div>

                        <div class="form-group">
                            <label asp-for="ImageUrl">Referans Görsel</label>
                            <input asp-for="ImageUrl" type="text" class="form-control" placeholder="Görsel Seçiniz" required="">
                        </div>

                        <div class="form-group">
                            <label asp-for="Comment">Referans Yorumu</label>
                            <textarea rows="5" asp-for="Comment" type="text" class="form-control" placeholder="Yorumunuzu Buraya Yazabilirsiniz." required=""></textarea>
                        </div>

                    </div>

                </div>

                <button type="submit" class="btn btn-primary waves-effect waves-light">Kaydet</button>
            </form>

        </div>
    </div>
</div>

