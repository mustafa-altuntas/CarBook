
@model List<ResultAboutDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}


<div class="col-xl-12">
    <div class="card">
        <div class="card-body">

            <h4 class="card-title">Hakkımızda Sayfası</h4>
            <p class="card-subtitle mb-4">
                Hakkımızda sayfasında bulunan bilgileri düzenliyebilirsiniz. Tema bütünlüğünün bozulmaması adına lütfen 1 adet giriş yapınız.<a href="#"></a>
                NOT: Yakında birden fazla giriş yapılarak yalnızca bir kayıt aktif edilebilecek.
            </p>

            <div class="button-examples mb-3">
                <a href="/Admin/About/Create" class="btn btn-outline-secondary waves-effect waves-light">

                    Yeni Hakkımda Sayfası Alanı Oluştur

                </a>

            </div>
            <div class="table-responsive">
                <table class="table mb-0">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Açıklama</th>
                            <th>Görsel</th>

                            <th>Sil</th>
                            <th>Güncelle</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <th scope="row">@count</th>
                                <td>@item.title</td>
                                <td>@item.description</td>
                                <td>@item.imageUrl</td>

                                <td><a href="/Admin/About/Remove/@item.aboutId" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/Admin/About/Update/@item.aboutId" class="btn btn-outline-success">Güncelle</a></td>

                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


