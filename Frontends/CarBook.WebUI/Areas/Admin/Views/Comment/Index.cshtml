@model List<ResutlCommentDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="row">
<div class="col-xl-12">
    <div class="card">
        <div class="card-body">

            <h4 class="card-title">Yorum Listesi - BlogID : </h4>
            <p class="card-subtitle mb-4">
                Bloglarla ilgili o bloga yapılmıs olan yorum listesini bu sayfadan görebilirsiniz. ilgili yorumları kaldırabilir ya da tekrar aktif hale getirebilirsiniz. Bunun icin yorumların altında yer alan butonları kullanabilirsiniz.
            </p>



            <div class="row">

                @foreach (var item in Model)
                {
                    count++;

                    <div class="col-md-12">
                        <div class="card">
                            <h5 class="card-header">Yorum @count</h5>
                            <div class="card-body">
                                <h4 class="card-title">@item.Name</h4>
                                <p class="card-text">
                                    @item.Description
                                </p>
                                <a href="#" class="btn btn-primary waves-effect waves-light">Yorumu Kaldır</a>
                            </div>
                        </div>
                    </div>
                }




            </div>


        </div>
    </div>
</div>
</div>


