@model List<ResultFeatureDto>
@{
    ViewData["Title"] = "CreateFeatureByCarId";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}




<div class="col-xl-12">
    <div class="card">
        <div class="card-body">

            <h4 class="card-title">
                Araca Ait Özellikler Ekleme Sayfası
            </h4>
            <p class="card-subtitle mb-4">
                Araca ait özellik tanımlaması yapılacak sayfadır.
            </p>

            <form method="post">

                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <div class="form-check">
                            <input type="hidden" asp-for="@Model[i].FeatureId" value="@Model[i].FeatureId" />
                            <input type="hidden" asp-for="@Model[i].Name" value="@Model[i].Name" />
                            <input type="checkbox" class="form-check-input" />
                            <label class="form-check-label" >@Model[i].Name</label>
                        </div>
                    }

                </div>
                <button class="btn btn-success mt-5">Araca Özellikleri Ata</button>

            </form>

        </div>
    </div>
</div>
