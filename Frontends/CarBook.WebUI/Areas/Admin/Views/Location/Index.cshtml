
@model List<ResultLocationDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="row">
<div class="col-xl-12">
    <div class="card">
        <div class="card-body">

            <h4 class="card-title">Lokasyon Bilgileri Sayfasi</h4>
            <p class="card-subtitle mb-4">
                Ana sayfa ve araç kiralama sayfasında yer alan araçların alınış ve bırakılış noktalarını temsil eden yer lokasyon kısmıdır. Aşağıda araç kiralama noktalarına ait lokasyon bilgilerinin isimleri yer almaktadır. Sağ tarafta yer alan buton üzerinden bu lokasyonun harita bilgisine erişim sağlayabilirsiniz.
            </p>

            <div class="button-examples mb-3">
                <a href="/Admin/Location/Create" class="btn btn-outline-secondary waves-effect waves-light">

                    Yeni Lokasyon Oluştur

                </a>

            </div>
            <div class="table-responsive">
                <table class="table mb-0">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Lokasyon</th>


                            <th>Sil</th>
                            <th>Güncelle</th>
                            <th>Konumu Aç</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                
                                <th>@count</th>
                                <th>@item.Name</th>

 

                                <td><a href="/Admin/Location/Remove/@item.LocationId" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/Admin/Location/Update/@item.LocationId" class="btn btn-outline-success">Güncelle</a></td>
                                <td><a href="/Admin/Location/Detail/@item.LocationId" class="btn btn-outline-dark">Konumu Aç</a></td>

                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
</div>


