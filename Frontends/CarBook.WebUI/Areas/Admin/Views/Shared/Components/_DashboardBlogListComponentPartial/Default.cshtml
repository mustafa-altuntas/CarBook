@model List<ResultAllBlogsWithAuthorDto>
@{
    int count = 0;
}


<div class="col-xl-6">
    <div class="card">
        <div class="card-body">

            <h4 class="card-title">Son Bloglar</h4>
            <p class="card-subtitle mb-4 font-size-13">
                Son yayınlanan 5 blog listesi.
            </p>

            <div class="table-responsive">
                <table class="table table-borderless  table-hover table-centered table-nowrap mb-0" id="recent-orders">

                    <tbody>

                        @foreach (var item in Model)
                        {
                            count++;
                            <tr onclick="window.location='/Blog/BlogDetail/@item.BlogID';" style="cursor: pointer;">
                                
                                <td>
                                    <h5 class="font-size-15 mb-1 font-weight-normal">
                                        @item.Title
                                    </h5>
                                    <span class="text-muted font-size-12">@item.CreatedDate.ToString("dd MMM yyyy")</span>
                                </td>
                                <td>
                                    <h5 class="font-size-15 mb-1 font-weight-normal">@item.AuthorName</h5>
                                </td>
                                <td><a href="/Blog/BlogDetail/@item.BlogID" class="btn btn-outline-dark">Sitede Aç</a></td>

                            </tr>

                        }


                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div> 